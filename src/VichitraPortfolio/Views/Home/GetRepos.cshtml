@model IEnumerable<VichitraPortfolio.Models.Repo>

<h2>Projects with Stars from my Talayruk Github</h2>
<hr />
<ol>
    @foreach (var repo in Model)
    {
        <li class="jumbotron">
            @*show only 3 repos*@

            <h2>@Html.DisplayFor(modelItem => repo.Name) &nbsp;<span class="glyphicon glyphicon-star"></span><small>@Html.DisplayFor(modelItem => repo.Stargazers_count)</small></h2>
            <h3>
                <a href="#"> @Html.DisplayFor(modelItem => repo.Html_url) </a>
                <br /><br />
                Description: @Html.DisplayFor(modelItem => repo.Description)
                <br />
                Language: @Html.DisplayFor(modelItem => repo.Language)

            </h3>

        </li>
    }
</ol>

@Html.ActionLink("Back home", "Index")



